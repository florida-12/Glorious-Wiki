<body>
    <style>
        .paladin {
            background-color: #202020;
            box-shadow: #9b59b933 5px 5px, #9b59b91a 10px 10px, #9b59b90d 15px 15px;
            border-radius: 11px;
            padding-top: 50px;
            padding-left: 50px;
            padding-right: 50px;
            padding-bottom: 50px;
            overflow: hidden;
        }

        .paladin-title {
            color: #fff;
            font-size: 40px;
            font-weight: 700;
            text-transform: uppercase;
            margin-top: -160px;
            margin-bottom: 20px;
        }

        .paladin-desc {
            width: 80%;
            color: #b1b0b0;
            font-size: 18px;
            margin-bottom: 60px;
        }

        .paladin-subtitle {
            color: #ca49d7;
            text-transform: uppercase;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 40px;
        }

        .paladin table,
        th,
        td {
            border: 2px solid #353535;
            border-collapse: collapse;
        }

        .paladin table {
            width: 79%;
            height: 140px;
            background: #292929;
            border-radius: 6px;
            border: 2px solid #353535;
            color: #fff;
            font-weight: 700;
        }

        .paladin table td {
            padding-top: 10px;
            padding-left: 15px;
            padding-bottom: 12px;
        }

        .paladin td img {
            margin-bottom: -3px;
        }

        .paladin-line {
            width: 100%;
            height: 2px;
            position: relative;
            background: #2d2d2d;
            border-radius: 40px;
            margin-top: 60px;
        }

        .paladin-img {
            width: 13.5%;
            position: relative;
            background: #292929;
            border: 2px solid #353535;
            padding-top: 20px;
            padding-left: 25px;
            padding-right: 25px;
            padding-bottom: 20px;
        }

        .paladin-img img {
            width: 100%;
            height: 100%;
            object-fit: fill;
        }

        .paladin-skill {
            color: #fff;
            font-size: 18px;
            font-weight: 500;
            text-transform: uppercase;
            margin-top: 20px;
            margin-left: 20px;
        }

        .paladin-skill img {
            width: 25px;
            border-radius: 4px;
            margin-right: 8px;
            margin-bottom: -6px;
        }

        .paladin ul {
            color: #b1b0b0;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .paladin .line {
            width: 80px;
            height: 2px;
            background-color: #ca49d7;
            border-radius: 40px;
            margin-top: 40px;
            margin-left: 20px;
            margin-bottom: 40px;
        }

        .paladin ul li {
            margin-bottom: 3px;
        }

        .paladin-tree {
            position: relative;
            background: #292929;
            border: 2px solid #353535;
            padding-top: 50px;
            padding-left: 50px;
            padding-right: 50px;
            padding-bottom: 50px;
            margin-top: 40px;
        }
    </style>

    <div class="discord" onclick="window.open('https://discord.gg/2FbAMjeNmH', '_blank');">
        <i class="fa-brands fa-discord"></i>
    </div>
