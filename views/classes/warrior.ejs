            <div class="warrior">
                
                <div class="d-flex justify-content-between">
                    <table>
                        <tr>
                            <td>—————————</td>
                            <td style="color: #d23139;">Здоровье <img src="/img/icon-health.png"></td>
                            <td style="color: #2399d8;">Мана <img src="/img/icon-mana.png"></td>
                            <td>Восстановление здоровья</td>
                            <td>Восстановление маны</td>
                        </tr>
                        <tr>
                            <td>На старте</td>
                            <td>45</td>
                            <td>20</td>
                            <td>0.2</td>
                            <td>0.1</td>
                        </tr>
                        <tr>
                            <td>За уровень</td>
                            <td>+5.3</td>
                            <td>+0.5</td>
                            <td>+0.05</td>
                            <td>+0.05</td>
                        </tr>
                    </table>
                    <div class="warrior-img">
                        <img src="/img/warrior.png">
                    </div>
